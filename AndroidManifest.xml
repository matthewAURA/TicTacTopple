    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
          
        <activity
            android:name="com.example.ticktaktopple.activity.HomeActivity"
            android:label="Tic Tac Topple" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ticktaktopple.activity.ScoreActivity"
            android:label="Tic Tac Topple" android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
